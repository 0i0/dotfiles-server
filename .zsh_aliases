# Common shortcuts
alias reload="source ~/.zshrc"
alias _="sudo -E"
alias dnf="sudo dnf"
alias rr="rm -rf"

# Git
alias gpo="git push origin"
alias gcr="git clone --recurse-submodules"
alias gsu="git submodule update --init"
alias grhh="git reset HEAD --hard"

# Kubernetiks
alias k='kubectl'
alias kg='kubectl get'
alias kgpod='kubectl get pod'
alias kdp='kubectl describe pod'
alias kap='kubectl apply'
alias krm='kubectl delete'
alias krmf='kubectl delete -f'
alias klf='kubectl logs -f'
alias kei='kubectl exec -i -t'
function kgdp() { kg pods | grep "Running" | sed 's/ .*//' | grep $1 }
function ktail() { klf $(kgdp $1 | head -n $2 | tail -n 1)}
function kssh() { kei $(kgdp $1 | head -n $2 | tail -n 1) -- bash}

# Docker
function dssh() {
    if [ "$2" = "" ]; then
        2="/bin/sh"
    fi
    docker exec -it $(docker ps | grep $1 | sed 's/ .*//') sh -c "$2"
}

function sbs() {
    ffmpeg -y -i $1 -i $2 -filter_complex "[0:v][1:v]hstack=inputs=2:shortest=1[out]" -map "0:a" -map "[out]" -crf 3 -shortest sbs.mp4
}

