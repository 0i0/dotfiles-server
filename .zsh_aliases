alias lsd="ls -lF | grep --color=never '^d'"

# Directory traversal
if [[ "$OSTYPE" == "darwin"* ]]; then
    alias ls="gls -AGh --color --group-directories-first"
else
    alias ls="ls -AGh --color --group-directories-first"
fi

[ -z ${cd+x} ] || cd_cmd=cd
function cs () {
    $cd_cmd $1
    ls -AGhl --color --group-directories-first
}

alias cd=cs
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias ~="cd ~"

# Always enable colored `grep` output
# Note: `GREP_OPTIONS="--color=auto"` is deprecated, hence the alias usage.
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias gerp='grep --color=auto'
alias grp='grep --color=auto'

# IP addresses
alias ip="curl ipinfo.io/ip"
alias ipl="hostname -I"

# Prevent ZSH from throwing autocorrect for weird-looking Sass commands
alias sass='nocorrect sass'

alias nano="/usr/local/bin/nano"
